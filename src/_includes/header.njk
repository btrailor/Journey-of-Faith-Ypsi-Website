<div class="top-header bg-white py-4 py-md-5 border-bottom">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-md-6 text-center text-md-start mb-3 mb-md-0">
        <div class="d-flex align-items-center justify-content-center justify-content-md-start">
          {% if site.logo %}
          <img src="{{ site.logo }}" alt="{{ site.name }} Logo" class="logo-img me-3 me-md-4">
          {% endif %}
          <div>
            <h1 class="h3 mb-1 fw-bold">{{ site.name }}</h1>
            <p class="mb-0 text-muted">{{ site.tagline }}</p>
          </div>
        </div>
      </div>
      <div class="col-md-6 text-center text-md-end">
        <p class="mb-1 fs-5">
          <strong>Worship with us {{ site.worshipDay }}, {{ site.worshipTime }}</strong>
        </p>
        <p class="mb-0 text-muted">{{ site.address }}</p>
      </div>
    </div>
  </div>
</div>
