<div class="top-header bg-white py-4 py-md-5 border-bottom">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-xl-6 text-center text-xl-start mb-3 mb-xl-0">
        {% if site.logo %}
        <img src="{{ site.logo }}" alt="{{ site.name }} Logo" class="logo-img">
        {% endif %}
      </div>
      <div class="col-xl-6 text-center text-xl-end">
        <p class="mb-1 fs-5">
          <strong>Worship with us {{ site.worshipDay }}, {{ site.worshipTime }}</strong>
        </p>
        <p class="mb-0 text-muted">{{ site.address }}</p>
      </div>
    </div>
  </div>
</div>
